{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ERPBackendDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxFileSizeBytes": 52428800,
    "AllowedExtensions": [ ".xlsx", ".xls", ".csv", ".pdf" ],
    "UploadPath": "Uploads",
    "ExportPath": "Exports"
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:4200" ]
  }
}
